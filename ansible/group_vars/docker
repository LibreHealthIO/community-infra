---

docker_install_compose: yes
docker_compose_version: "1.22.0"
docker_compose_path: /usr/local/bin/docker-compose

docker_daemon_opts:
  - "storage-driver": "overlay2"
  - "dns": ["8.8.8.8", "8.8.4.4"]

# https://docs.docker.com/engine/installation/linux/ubuntulinux/#/enable-ufw-forwarding
ufw_config:
  globalconfig:
    direction: "routed"
    logging: "off"
    policy: allow
    state: enabled

# datadog checks
datadog_checks:
  docker_daemon:
    init_config:
    instances:
    - url: "unix://var/run/docker.sock"
      new_tag_names: true
